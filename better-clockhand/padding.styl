


is-ignore(val)
  if val is 0
    return false
  else if val is _
    return true
  else
    return val is false



padding()
  argumentsCount = length(arguments)

  if argumentsCount is 1
    if not is-ignore(arguments)
      padding arguments
  else if argumentsCount is 2
    if arguments[1] is !important
      padding arguments
    else
      if not is-ignore(arguments[0])
        padding-top    arguments[0]
        padding-bottom arguments[0]
      if not is-ignore(arguments[1])
        padding-left    arguments[1]
        padding-right arguments[1]
  else if argumentsCount is 4
    padding-top    arguments[0] if not is-ignore(arguments[0])
    padding-right  arguments[1] if not is-ignore(arguments[1])
    padding-bottom arguments[2] if not is-ignore(arguments[2])
    padding-left   arguments[3] if not is-ignore(arguments[3])
